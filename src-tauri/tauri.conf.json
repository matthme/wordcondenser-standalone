{
  "build": {
    "beforeDevCommand": "npm run dist",
    "devPath": "../dist",
    "distDir": "../dist",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "Word Condenser",
    "version": "0.1.2"
  },
  "tauri": {
    "cli": {
      "description": "Running Word Condenser from the command line",
      "args": [
        {
          "name": "profile",
          "takesValue": true,
          "multiple": false
        }
      ]
    },
    "updater": {
      "active": true,
      "endpoints": [
        "https://drive.switch.ch/index.php/s/Y0pdrE8eqKoT8qD/download"
      ],
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDMwMEI5ODQ1QjU5NUZFMzkKUldRNS9wVzFSWmdMTURpdm9Mck5WWi9FaHFNaWhzVlVDa3k2V0tzbmJodTNUTXRnRTQ5VENpNWwK"
    },
    "allowlist": {
      "all": false,
      "clipboard": {
        "writeText": true
      },
      "dialog": {
        "all": false,
        "ask": false,
        "confirm": false,
        "message": true,
        "open": false,
        "save": false
      },
      "shell": {
        "all": false,
        "open": true
      }
    },
    "cli": {
      "description": "Running replace-me from the command line",
      "args": [
        {
          "name": "profile",
          "takesValue": true,
          "multiple": false
        }
      ]
    },
    "systemTray": {
      "iconPath": "icons/32x32.png"
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.wordcondenser.app",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "externalBin": [
        "bins/holochain-wc-v0.1.6",
        "bins/lair-keystore-wc-v0.3.0"
      ],
      "macOS": {
        "frameworks": [],
        "minimumSystemVersion": "",
        "exceptionDomain": "",
        "signingIdentity": null,
        "entitlements": "entitlements.plist"
      },
      "resources": [
        "icons/icon_priority_medium_32x32.png",
        "icons/icon_priority_high_32x32.png",
        "icons/32x32.png"
      ]
    },
    "security": {
      "csp": null
    },
    "windows": []
  }
}
